<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.example.footy.ui.category_fragment.MealClickListener" />

        <variable
            name="meal"
            type="com.example.footy.network.Meal" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/round_edge_grey_rectangle"
        android:onClick="@{()->clickListener.onClick(meal)}">


        <ImageView
            android:id="@+id/mealImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setRoundImage="@{meal}"
            tools:src="@color/red" />

        <TextView
            android:id="@+id/mealNameTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@{meal.strMeal}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mealImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Spaghetti " />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

